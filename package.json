{
  "name": "golden_core",
  "version": "1.0.0",
  "description": "Golden is a free and open source Discord bot started in 2021 with the goal to provide 24/7, lag free music for you and your friends.",
  "main": "./src/golden.ts",
  "repository": "https://github.com/arcinsolutions/Golden",
  "author": "Botis#0666, Raved#8329",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "yarn tsc",
    "build:changelog": "npx @discordx/changelog --root=src",
    "dev": "node --loader ts-node/esm/transpile-only --experimental-specifier-resolution=node src/golden.ts",
    "start": "nodemon --exec node --loader ts-node/esm/transpile-only src/golden.ts",
    "serve": "node build/golden.js"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "lerna": "^5.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@discordx/importer": "^1.1.9",
    "@discordx/koa": "^1.1.0",
    "@discordx/utilities": "^4.3.1",
    "@koa/router": "^10.1.1",
    "discord.js": "^13.7.0",
    "discordx": "^9.7.1",
    "dotenv": "^16.0.1",
    "koa": "^2.13.4",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.16",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.8.0",
    "typeorm": "^0.3.6"
  }
}
